{
  "extends": ["plugin:@next/next/recommended"],
  "ignorePatterns": ["graphql/**"],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["error"]
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["./graphql/**/*.ts", "./lib/hooks.ts"],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off"
      }
    }
  ]
}
