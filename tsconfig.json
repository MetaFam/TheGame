{
 "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
   "typeRoots": ["./node_modules/@types"]
 },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
